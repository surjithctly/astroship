---
import Knowledgeable from "@components/features/smartiePants";
import EasyInstall from "@components/features/easyInstall";
---

<div class="mx-[calc(50%-50vw)] bg-slate-100 pt-8">
  <h2
    class="ml-6 flex items-start text-4xl font-bold tracking-tight sm:ml-16 lg:text-5xl">
    Using WiselyDesk, users find their answers in seconds.
  </h2>
  <div
    class="justify-items-center gap-10 p-16 text-base leading-7 text-gray-600 lg:grid lg:grid-cols-2">
    <div class="flex flex-col p-2">
      <p class="text-center text-lg italic">
        Time to find answer <span class="font-semibold">before</span> WiselyDesk:
        <span class="font-semibold"> ~80 seconds</span>
      </p>
      <img
        loading="lazy"
        src="/zendeskSearch.gif"
        alt="Zendesk search"
        class="rounded"
      />
    </div>
    <div class="mt-4 flex flex-col p-2 lg:mt-0">
      <p class="text-center text-lg italic">
        <span class="font-semibold">After</span> WiselyDesk: <span
          class="font-semibold">
          4 seconds</span
        >
      </p>
      <img
        loading="lazy"
        src="/wdsearch_v2.gif"
        alt="WiselyDesk search"
        class="rounded"
      />
    </div>
  </div>
</div>
<div class="mt-12 w-full">
  <h1 class="text-center text-4xl font-bold tracking-tight lg:text-5xl">
    Introducing WiselyDesk
  </h1>
  <Knowledgeable />
  <EasyInstall />
</div>
